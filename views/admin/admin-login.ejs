        <div class="form-group">
          <label for="adminEmail">Email Address</label>
          <input
            type="email"
            class="form-control"
            id="adminEmail"
            name="email"
            placeholder="Email address"
            required
          />
          <div id="emailError" class="error-message">Invalid email format</div>
        </div>
        <div class="form-group">
          <label for="adminPassword">Password</label>
          <input
            type="password"
            class="form-control"
            id="adminPassword"
            name="password"
            placeholder="Password"
            required
          />
          <div id="passwordError" class="error-message">Password should contain at least 8 characters</div>
        </div>
