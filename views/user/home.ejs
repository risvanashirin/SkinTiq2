    <style>
        #billboard {
            position: relative;
            overflow: hidden;
            background:rgba(255, 234, 234, 0.15);
            padding: 50px 0;
        }

        .main-slider {
            position: relative;
            width: 100%;
        }

        .slider-item {
    position: relative;
    height: 600px; /* or 100vh for full screen */
    display: flex;
    align-items: center;
    justify-content: center;
}
.w-100 {
  width: 71% !important;
}

        .banner-image {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;	
            height: 100%;
            object-fit: cover;
            z-index: 1;
            filter: brightness(80%);
            transition: transform 0.5s ease;
			
        }

        .slider-item:hover .banner-image {
            transform: scale(1.05);
        }

       .banner-content {
    position: absolute; /* change from relative */
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%); /* Perfect center */
    
    z-index: 2;
    text-align: center;
    color: #fff;
    padding: 30px;
    background: rgba(148, 148, 146, 0.5);
    border-radius: 15px;
    max-width: 600px;
    animation: fadeInUp 1s ease-in-out;


}



        .banner-title {
            font-size: 3rem;
            font-weight: 700;
            text-transform: uppercase;
            margin-bottom: 20px;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
			font-family: 'Playfair Display';
        }

        .banner-content p {
            font-size: 1.2rem;
            line-height: 1.6;
            margin-bottom: 30px;
			font-family: 'Lora';
        }

        .btn-wrap .btn {
            background: linear-gradient(45deg, #44351c, #efe10a);
            color: #fff;
            padding: 12px 30px;
            font-size: 1.1rem;
            border: none;
            border-radius: 50px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
        }

        .btn-wrap .btn:hover {
            background: linear-gradient(45deg, #b7b371, #b7b371);
            transform: translateY(-3px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        }

        .btn-wrap .btn i {
            margin-left: 10px;
            font-size: 1.2rem;
        }
       


