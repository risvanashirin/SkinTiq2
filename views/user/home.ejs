<section class="ftco-gallery">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 heading-section text-center mb-4 ftco-animate">
                <h2 class="mb-4">Our Best Sellers</h2>
            </div>
        </div>
    </div>
    <div class="container-fluid px-0 py-4 bg-gray-50">
        <div class="row justify-content-center px-3">
            <% products.slice(0, 3).forEach(product => { %>
                <div class="col-6 col-md-4 col-lg-3 mb-4 d-flex align-items-stretch">
                    <div class="card product shadow-sm border-0 w-100 hover:shadow-lg transition">
                        <a href="/productDetails?id=<%= product._id %>" class="img-prod position-relative">
                            <img 
                                class="card-img-top img-fluid rounded-top" 
                                src="<%= product.productImage && product.productImage.length > 0 ? product.productImage[0] : '/images/default-product.jpg' %>" 
                                alt="<%= product.productName %>">
                        </a>
                        <div class="card-body text-center bg-white rounded-bottom">
                            <h5 class="card-title text-lg font-semibold text-gray-800"><%= product.productName %></h5>
                            <a href="/productDetails?id=<%= product._id %>" class="btn btn-outline-success btn-sm mt-2">View Details</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</section>

