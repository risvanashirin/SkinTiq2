    fill: #fff;
  }
  .sidebar-close {
    display: none;
    color: #1e1b1b;
    border: none;
    border-radius: 8px;
    padding: 0.6rem;
    font-size: 0.9rem;
    font-weight: 600;
    cursor: pointer;
    margin-bottom: 1rem;
    box-shadow: 0 2px 6px rgba(185, 71, 71, 0.2);
    transition: all 0.3s ease;
  }
  .sidebar-close:hover {
    box-shadow: 0 4px 10px rgba(185, 71, 71, 0.3);
  }
  .sidebar-close svg {
    width: 18px;
    height: 18px;
    fill: #1a1717;
  }
  @media (max-width: 768px) {
    .sidebar-partial {
      transform: translateX(-100%); /* Ensure fully hidden */
      width: min(220px, 70vw);
      padding: 1.5rem;
      border-radius: 10px;
      top: 10vh;
      height: calc(90vh - 2rem);
    }
    .sidebar-partial.open {
      transform: translateX(0);
    }
    .sidebar-partial nav a {
      font-size: 0.9rem;
      padding: 0.6rem 1rem;
    }
    .sidebar-partial nav a svg {
      width: 16px;
      height: 16px;
    }
    .sidebar-close {
      display: block;
    }
  }
  @media (max-width: 480px) {
    .sidebar-partial {
      width: min(180px, 65vw);
      padding: 1rem;
      border-radius: 8px;
      top: 8vh;
      height: calc(88vh - 2rem);
    }
    .sidebar-partial nav a {
      font-size: 0.85rem;
      padding: 0.5rem 0.8rem;
    }
    .sidebar-partial nav a svg {
      width: 14px;
      height: 14px;
    }
    .sidebar-close {
      padding: 0.5rem;
      font-size: 0.8rem;
    }
  }
  @media (max-width: 320px) {
    .sidebar-partial {
      width: min(160px, 60vw);
      padding: 0.8rem;
      border-radius: 6px;
    }
    .sidebar-partial nav a {
      font-size: 0.8rem;
      padding: 0.4rem 0.6rem;
    }
    .sidebar-partial nav a svg {
      width: 12px;
      height: 12px;
    }
  }
  .sidebar-toggle {
    display: none;
    position: fixed;
    top: 1rem;
    left: 1rem;
    z-index: 60;
    background: linear-gradient(90deg, #7e6b00, #a68c00);
    color: #fff;
    padding: 0.6rem;
    border-radius: 8px;
    border: none;
    box-shadow: 0 2px 6px rgba(126, 107, 0, 0.2);
    transition: all 0.3s ease;
    cursor: pointer;
  }
  .sidebar-toggle:hover {
    background: linear-gradient(90deg, #655700, #8c7500);
    box-shadow: 0 4px 10px rgba(126, 107, 0, 0.3);
  }
  .sidebar-toggle svg {
    width: 20px;
    height: 20px;
    fill: #fff;
  }
  @media (max-width: 768px) {
    .sidebar-toggle {
      display: block;
    }
    .sidebar-partial.open ~ .sidebar-toggle {
      display: none;
    }
    .profile-container {
      margin-left: 0;
      transition: margin-left 0.3s ease;
      padding-left: 1rem;
    }
    .profile-container.sidebar-open {
      margin-left: min(220px, 70vw);
    }
  }
  @media (max-width: 480px) {
    .profile-container.sidebar-open {
      margin-left: min(180px, 65vw);
    }
    .sidebar-toggle {
      padding: 0.5rem;
    }
    .sidebar-toggle svg {
      width: 18px;
      height: 18px;
    }
  }
  @media (max-width: 320px) {
    .profile-container.sidebar-open {
      margin-left: min(160px, 60vw);
    }
  }
</style>

