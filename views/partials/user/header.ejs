    <link rel="stylesheet" href="css/style.css">

    <style>
      /* Enhanced responsive styles for header */
      .dropdown {
        position: relative;
        display: inline-block;
      }

      .dropdown-content {
        display: none;
        position: absolute;
        background-color: white;
        min-width: 160px;
        box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        right: 0;
        border-radius: 4px;
      }

      .dropdown-content a {
        color: black;
        padding: 12px 16px;
        text-decoration: none;
        display: block;
        width: 100%;
        font-size: clamp(0.9rem, 2.5vw, 1rem);
      }

      .dropdown-content a:hover {
        background-color: #f8f8f8;
      }

      .dropdown:hover .dropdown-content {
        display: block;
      }

      .header {
        position: relative;
        z-index: 500;
      }

      .navbar {
        height: auto;
        min-height: 60px;
        padding: 0.5rem 1rem;
        position: fixed;
        top: -31px;
        left: 0;
        right: 0;
        z-index: 1000;
        background-color: white;
      }

      .navbar-bran {
        font-size: clamp(1.2rem, 4vw, 1.8rem);
        font-family: 'Playfair Display', serif;
        font-weight: 900;
        background: linear-gradient(45deg, #44351c, #efe10a);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        padding: 8px 12px;
        letter-spacing: 1px;
        text-transform: uppercase;
        text-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease, text-shadow 0.3s ease;
        display: inline-block;
        margin-bottom: -0.5rem;
      }

      .navbar-bran:hover {
        transform: scale(1.05);
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.4);
      }

      .navbar-nav {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
        gap: clamp(0.5rem, 2vw, 1rem);
      }

      .nav-item {
        margin: 0.5rem 0;
      }

      .nav-link {
        font-size: clamp(0.85rem, 2.5vw, 0.95rem);
        padding: 0.5rem 1rem;
        white-space: nowrap;
        transition: color 0.3s ease;
      }

      .nav-link:hover {
        color: #4CAF50;
      }

      .navbar-collapse {
        flex-grow: 1;
      }

      .navbar-toggler {
        border: none;
        font-size: 1.25rem;
        padding: 0.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background: transparent;
      }

      .navbar-toggler .oi-menu {
        font-size: clamp(1.2rem, 3vw, 1.5rem);
        color: #44351c;
      }

      .navbar-toggler:focus {
        outline: none;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
      }

      .nav-link span.icon-heart,
      .nav-link span.icon-shopping_cart {
        font-size: clamp(0.9rem, 2.5vw, 1.1rem);
      }

      .dropdown-menu {
        min-width: 160px;
        width: 100%;
        max-width: 200px;
        right: 0;
        left: auto;
        color: black;
        font-size: clamp(0.85rem, 2.5vw, 0.95rem);
      }

      .dropdown-item {
        padding: 0.5rem 1rem;
      }

      /* Responsive adjustments */
      @media (max-width: 991.98px) {
        .navbar {
          padding: 0.5rem 1rem;
        }

        .navbar-collapse {
          background-color: white;
          padding: 1rem;
          border-radius: 4px;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
          margin-top: 0.5rem;
        }

        .navbar-nav {
          flex-direction: column;
          align-items: flex-start;
        }

        .nav-item {
          width: 100%;
        }

        .nav-link {
          padding: 0.75rem 1rem;
          width: 100%;
          text-align: left;
        }

        .dropdown-content,
        .dropdown-menu {
          position: static;
          width: 100%;
          box-shadow: none;
          border: 1px solid #ddd;
        }

        .dropdown-content a,
        .dropdown-menu a {
          padding: 10px 15px;
          font-size: clamp(0.85rem, 2.5vw, 0.95rem);
        }

        .navbar-bran {
          font-size: clamp(1.1rem, 3.5vw, 1.5rem);
          padding: 6px 10px;
        }

        .navbar-toggler .oi-menu {
          font-size: clamp(1.1rem, 2.8vw, 1.3rem);
          margin-left: 0;
        }
      }

      @media (max-width: 576px) {
        .navbar {
          padding: 0.4rem 0.8rem;
        }

        .navbar-bran {
          font-size: clamp(0.9rem, 3vw, 1.2rem);
        }

        .navbar-toggler {
          padding: 0.3rem;
        }

        .navbar-toggler .oi-menu {
          font-size: clamp(1rem, 2.5vw, 1.2rem);
        }

        .nav-link {
          font-size: clamp(0.8rem, 2.2vw, 0.9rem);
          padding: 0.5rem 0.8rem;
        }

        .nav-link span.icon-heart,
        .nav-link span.icon-shopping_cart {
          font-size: clamp(0.8rem, 2.2vw, 1rem);
        }

        .dropdown-content a,
        .dropdown-menu a {
          font-size: clamp(0.8rem, 2.2vw, 0.9rem);
          padding: 8px 12px;
        }
      }

      .ftco-navbar-light.scrolled .nav-item.cta > a {
        color: #000000 !important;
        background: white;
        border: none !important;
      }
    </style>
  </head>
  <body class="goto-here">
    <nav class="navbar navbar-expand-lg navbar-light bg-white ftco_navbar ftco-navbar-light" id="ftco-navbar">
      <div class="container">
        <a href="/"><h1 class="navbar-bran text-2xl font-bold" href="/">Skintiq</h1></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="oi oi-menu"></span> 
        </button>

        <div class="collapse navbar-collapse" id="ftco-nav">
          <ul class="navbar-nav ml-auto space-x-4 text-base font-medium">
            <li class="nav-item"><a href="/" class="nav-link text-gray-700 hover:text-green-700 transition">Home</a></li>
            <li class="nav-item"><a href="/shop" class="nav-link text-gray-700 hover:text-green-700 transition">Shop</a></li>
            <li class="nav-item"><a href="/about" class="nav-link text-gray-700 hover:text-green-700 transition">About</a></li>
            <li class="nav-item"><a href="/contact" class="nav-link text-gray-700 hover:text-green-700 transition">Contact</a></li>
